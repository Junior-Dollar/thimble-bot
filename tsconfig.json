{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "module": "commonjs",
    "outDir": "./dist",
    "rootDirs": [
      "./src"
    ],
    "strict": true,
    "target": "es2017",
    "typeRoots": [
      "./node_modules/@types",
      "./src/typings"
    ]
  },
  "exclude": [
    "node_modules",
    "./config.json"
  ],
  "include": [
    "./src/**/*.ts"
  ]
}
